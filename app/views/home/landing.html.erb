<div class="colored-bar"></div>
<div class="container landing-content">
	<div class="row-fluid">
		<div class="span6 hero-copy text-center">
			<img class="wislr-teal" src="/wislr_teal.png">
			<h3>The Private High School<br>
				Mobile Network</h3>
				<div class="hero-form">
					<form id="hero-form">
						<div class="controls row-fluid">
							<input class="span6" type="text" id="inputFirstName" placeholder="First Name" auto-complete="off" required>
							<input class="span6" type="text" id="inputLastName" placeholder="Last Name" auto-complete="off" required>
						</div>
						<div class="controls row-fluid">
							<input class="span8" type="email" id="inputEmail" placeholder="Email" auto-complete="off" required>
							<input class="span4" type="tel" id="inputPhoneNumber" placeholder="Phone Number" auto-complete="off">
						</div>
						<div class="controls row-fluid">
							<%= render "home/state_table" %>
							<div class="input-append" id="school-search-input">
								<input class="" type="text" id="inputSchool" data-provide="typeahead" placeholder="School Name" auto-complete="off" required>
								<a role="button" class="btn" id="school-search">Search</a>
							</div>
						</div>
						<div class="controls row-fluid">
							<select class="span12" multiple="multiple" id="multiple-school-select"></select>
						</div>
						<button role="submit" class="custom-btn" id="get-invited">Get Invited</button>
					</form>
				</div>
			</div>
			<div class="span6 iphone-demo">
				<img class="iphone5" src="/iphone5.png">
				<img class="hero-carousel hero-carousel-header" src="/whistles/whistle-header.png">
				<div id="heroCarousel" class="vertical carousel slide hero-carousel">
					<!-- Carousel items -->
					<div class="carousel-inner">
						<div class="item active"><img src="/whistles/whistle1.png"></div>
						<div class="item"><img src="/whistles/whistle2.png"></div>
						<div class="item"><img src="/whistles/whistle3.png"></div>
						<div class="item"><img src="/whistles/whistle4.png"></div>
					</div>
					<!-- Carousel nav -->
					<a class="carousel-control right" href="#heroCarousel" data-slide="next"><img src=""><i class="icon-chevron-down icon-white"></i></a>
				</div>
			</div>
		</div>
	</div>
	<%= render "shared/footer" %>
